{
  "compilerOptions": {

    "target": "es2016" ,
    "module": "commonjs" ,
    "rootDir": "./src" ,
    "moduleResolution": "node" ,
    
    "outDir": "./build" ,
    
    "esModuleInterop": true ,
                    
    "forceConsistentCasingInFileNames": true,
    "strict": true,   
    "skipLibCheck": true ,
    "typeRoots": ["./node_modules/@types", "./types"]/* Skip type checking all .d.ts files. */
  }
}