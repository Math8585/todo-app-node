generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  todos     Todo[]
}

model Todo {
  id          Int      @id @default(autoincrement())
  title        String
  completed   Boolean
  categoryId  Int
  category    Category? @relation(fields: [categoryId], references: [id])
}

